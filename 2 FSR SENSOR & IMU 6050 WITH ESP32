#include <Wire.h>
#include <Adafruit_MPU6050.h>
#include <Adafruit_Sensor.h>

#define FSR1_PIN 32 // Pin for first FSR
#define FSR2_PIN 33 // Pin for second FSR

// Define new I2C pins
#define SDA_PIN 25 // New SDA pin
#define SCL_PIN 26 // New SCL pin

Adafruit_MPU6050 mpu;

void setup() {
    Serial.begin(115200);
    
    // Initialize I2C with custom pins
    Wire.begin(SDA_PIN, SCL_PIN);
    
    // Initialize MPU6050
    if (!mpu.begin()) {
        Serial.println("Failed to find MPU6050 chip");
        while (1) { delay(10); }
    }
    
    // Set up pins for FSRs
    pinMode(FSR1_PIN, INPUT);
    pinMode(FSR2_PIN, INPUT);
    
    Serial.println("MPU6050 found!");
}

void loop() {
    // Read accelerometer and gyroscope values
    sensors_event_t a, g, temp;
    mpu.getEvent(&a, &g, &temp);
    
    // Read values from FSRs
    int fsr1Reading = analogRead(FSR1_PIN);
    int fsr2Reading = analogRead(FSR2_PIN);

    // Print readings to Serial Monitor
    Serial.print("FSR1: ");
    Serial.print(fsr1Reading);
    Serial.print(" | FSR2: ");
    Serial.print(fsr2Reading);
    
    Serial.print(" | Accel X: ");
    Serial.print(a.acceleration.x);
    Serial.print(" m/s^2");
    
    Serial.print(" | Gyro Z: ");
    Serial.print(g.gyro.z);
    Serial.println(" rad/s");

    delay(1000); // Delay for readability
}
